<%- include('partials/header') %>

<div class="container mt-5" style="background-color: #118c18;">
  <i class="fas fa-user fa-6x"></i>
  <h1 style="color: red;">User Register</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/userregister" method="POST">
            <div class="form-group">
              <label for="regno">Reg number</label>
              <input type="text" class="form-control" name="regno" required>
            </div>
            <div class="form-group">
              <label for="name">Student Name</label>
              <input type="text" class="form-control" name="studentname" required>
            </div>
            <div class="form-group">
              <label for="course">course</label>
              <input type="text" class="form-control" name="course" required>
            </div>
            <div class="form-group">
              <label for="batch">Batch</label>
              <input type="text" class="form-control" name="batch" required>
            </div>
            <div class="form-group">
              <label for="Email">Email</label>
              <input type="email" class="form-control" name="email" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div>
            <button type="submit" class="btn btn-warning" style="background-color: yellow;">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
